    {
      "id": "compound_sentences",
      "title": "Compound Sentences",
      "cards": [
        {"type": "text", "title": "What are compound sentences?", "body": "Two simple sentences joined by 'and', 'or', 'but'."},
        {"type": "example", "body": "I like cats and I like dogs."},
        {"type": "text", "title": "Conjunctions", "body": "And, or, but connect ideas."}
      ],
      "quiz": [
        {"id":"q1","prompt":"Which is a compound sentence?","options":["I like cats.","I like cats and dogs.","Cats like."],"answerIndex":1,"explanation":"It joins two ideas with 'and'."},
        {"id":"q2","prompt":"Which is a compound sentence?","options":["She runs.","She runs or walks.","Runs she."],"answerIndex":1,"explanation":"It joins two ideas with 'or'."},
        {"id":"q3","prompt":"Which is a compound sentence?","options":["He is tall.","He is tall but thin.","Tall he."],"answerIndex":1,"explanation":"It joins two ideas with 'but'."},
        {"id":"q4","prompt":"Which is a compound sentence?","options":["They play.","They play and sing.","Play they."],"answerIndex":1,"explanation":"It joins two ideas with 'and'."},
        {"id":"q5","prompt":"Which is a compound sentence?","options":["We eat.","We eat or drink.","Eat we."],"answerIndex":1,"explanation":"It joins two ideas with 'or'."}
      ]
    }
