        {"id":"q2","prompt":"Which is an adverb?","options":["School","Slowly","Red"],"answerIndex":1,"explanation":"Slowly describes how."},
        {"id":"q3","prompt":"Which is an adverb?","options":["Book","Here","Tall"],"answerIndex":1,"explanation":"Here describes where."},
