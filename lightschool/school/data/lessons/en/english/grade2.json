      "cards": [
        {"type": "text", "title": "What are adverbs?", "body": "Adverbs describe verbs, adjectives, or other adverbs."},
        {"type": "example", "body": "Run quickly, very big"},
        {"type": "text", "title": "Examples", "body": "How: fast, when: now, where: here"}
