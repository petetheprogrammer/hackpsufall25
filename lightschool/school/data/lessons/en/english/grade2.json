        {"id":"q3","prompt":"Which is an adjective?","options":["Book","Tall","Read"],"answerIndex":1,"explanation":"Tall describes height."},
        {"id":"q4","prompt":"Which is an adjective?","options":["Teacher","Round","Teach"],"answerIndex":1,"explanation":"Round describes shape."},
